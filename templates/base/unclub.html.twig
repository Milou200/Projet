{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Un club
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-10 text-primary">
				<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">{{club.nom}}</h1>
			</div>
		</div>
	</div>
	<h5>
	  <a href="{{path('app_base')}}" class="link">Retour a l'accueil</a>
	  </h5>

	<div class="card" style="width: 20rem;">
		{% for maillot in club.maillots %}
			<div class="card-body">
            {% set chemin = 'images/produits/'~maillot.image %}
            <img src="{{asset(chemin)}}" class="card-img-top" alt="logo PSG" style="width: 300px">
				<h5 class="card-title">{{maillot.nom}}</h5>
				<p class="card-text">

					{% for associer in maillot.associers %}
						<span class="badge text-bg-primary">{{associer.taille.libelle}}</span>

					{% endfor %}
				{% endfor %}
			</p>
			<a href="{{path('app_panier')}}" class="btn btn-primary">AJOUTER AU PANIER</a>

		</div>
	</div>


{% endblock %}